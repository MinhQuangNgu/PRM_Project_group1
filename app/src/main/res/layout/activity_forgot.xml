<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reset"
        android:layout_width="110dp"
        android:layout_height="29dp"
        android:background="@drawable/greenbuttongradient"
        android:fontFamily="sans-serif-black"
        android:text="Reset"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="242dp"
        tools:layout_editor_absoluteY="368dp" />

    <TextView
        android:id="@+id/err_email4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Invalid account"
        android:textColor="@color/textError"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/edt_forgot_email"
        app:layout_constraintEnd_toEndOf="@+id/edt_forgot_email"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="@+id/edt_forgot_email" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/icons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_forgot_email"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:background="@drawable/inputfield"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Forgot Password"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancle"
        android:layout_width="104dp"
        android:layout_height="29dp"
        android:background="@drawable/greenbuttongradient"
        android:fontFamily="sans-serif-black"
        android:text="Cancle"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="368dp" />

</androidx.constraintlayout.widget.ConstraintLayout>